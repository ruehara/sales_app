{
    "files.exclude": {
        "**/*.drift.dart": true,
        "**/*.iml": true,
        "**/build/": true,
        "**/.idea/": true,
        "**/.dart_tool": true,
        "**/.flutter-plugins": true,
        "**/.flutter-plugins-dependencies": true,
        "**/.metadata": true,
        "**/pubspec.lock": true,
        "**/android/": true,
        "**/ios/": true,
        "**/web/": true,
        "**/macos/": true,
        "**/windows/": true,
        "**/linux/": true,
        "**/generated/": true,
        "**/analysis_options.yaml": true,
        "**/coverage_badge.svg": true,
    },
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },
    "editor.formatOnSave": true,
    "files.associations": {
        "*.arb": "json"
    }
}